<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_login"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.mainapplication.pages.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/login_fragment">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"/>
        <action
            android:id="@+id/action_loginFragment_to_productListfragment"
            app:destination="@id/productListfragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.mainapplication.pages.register.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/register_fragment"/>
    <fragment
        android:id="@+id/productListfragment"
        android:name="com.example.mainapplication.pages.home.ProductListFragment"
        android:label="ProductListFragment"
        tools:layout="@layout/fragment_product_list">
    <action
        android:id="@+id/actionl"
        app:destination="@id/loginFragment"/>
    </fragment>
</navigation>